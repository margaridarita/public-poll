<div class="back-link mt-4 ">
  <%= link_to root_path, title: "Back" do %>
      <i class="back-icon fa-solid fa-xmark"></i>
  <% end %>
</div>

<div class="d-flex flex-column align-items-center justify-content-center mt-5" >
  <div class="d-flex flex-column align-items-center justify-content-center mt-5">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <div class="d-flex align-items-center">
          <i class="fa-sharp fa-solid fa-envelope mb-3"></i>
          <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email" } %>
        </div>

        <div class="d-flex align-items-center">
          <i class="fa-sharp fa-solid fa-lock mb-3"></i>
          <%= f.input :password,
                    required: false,
                    label: false,
                    input_html: { autocomplete: "current-password" } %>
        </div>

        <%= f.input :remember_me, as: :boolean, input_html: { style: "margin-bottom: 20px;" }  if devise_mapping.rememberable? %>

      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class: "button-blue"%>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
