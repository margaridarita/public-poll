<div id="log-in-page d-flex flex-column justify-content-center">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="log-in">

      <div class="log-in-email d-flex align-items-center">
        <i class="fa-sharp fa-solid fa-envelope"></i>
        <div class="email-field">
          <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email" }, class: "email-input" %>
        </div>
      </div>

      <div class="log-in-password d-flex align-items-center">
        <i class="fa-sharp fa-solid fa-lock"></i>
        <div class="password-field">
          <%= f.input :password,
                    required: false,
                    label: false,
                    input_html: { autocomplete: "current-password" }, class: "password-input" %>
        </div>
      </div>

    </div>

    </div>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
