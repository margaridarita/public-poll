<div class="back-link mt-4">
  <%= link_to :back, title: "Back" do %>
    <i class="back-icon fa-solid fa-angle-left"></i>
    <h2 class="page-title mb-0">Reset password</h2>
  <% end %>
</div>

<div class="d-flex flex-column align-items-center justify-content-center mt-5" >
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs mt-5">
      <div class="d-flex align-items-center">
        <i class="fa-sharp fa-solid fa-envelope mb-3"></i>
        <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  placeholder: "e-mail",
                  input_html: { autocomplete: "email" } %>
      </div>
    </div>
    <div class="form-actions d-flex flex-column align-items-center mt-5">
      <%= f.button :submit, "Reset", class: "button-reset" %>
    </div>
  <% end %>
</div>
