<div class="new-poll-page">

  <h2>New poll</h2>

  <div class="d-flex justify-content-center align-items-center">
    <%= simple_form_for @poll do |f| %>
      <%= f.label :"Category *", class: "category-label" %>
      <%= f.collection_select :category_id, Category.all, :id, :title, { prompt: 'Select category',  }, { class: 'form-control category-field' } %>
      <%= f.input :question, placeholder: 'Your question' %>
      <%= f.input :first_option, placeholder: 'Option 1' %>
      <%= f.input :second_option, placeholder: 'Option 2' %>
      <div class="d-flex justify-content-center">
        <%= f.submit class: 'button-blue' %>
      </div>
    <% end %>
  </div>

