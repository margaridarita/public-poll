
<% @polls.each do |poll| %>
  <%= link_to poll.question, poll_path(poll) %>
<% end %>

<div class="card-container">
  <div class="poll-card">
    <div class="card-header">
      <h3>Public Poll is the best?</h3>
    </div>
    <div class="answers-card">
      <div class="answer-card-1">
        <h3>Option 1</h3>
      </div>
      <div class="answer-card-2">
        <h3>Option 2</h3>
      </div>
    </div>
  </div>
</div>
