<div class="back-link mt-4 mb-4">
  <%= link_to accepted_friendships_path, title: "Back" do %>
      <i class="back-icon fa-solid fa-angle-left"></i>
  <% end %>
  <h2 class="page-title mb-0">Requests</h2>
</div>

<% if current_user.friendships_requested.any? %>
  <div class="comments-container">
    <% current_user.friendships_requested.each do |friendship| %>
      <%= render partial: 'friends', locals: { friendship: friendship, show_requested_options: true } %>
    <% end %>
  </div>
<% else %>
  <p class="mt-1">You don't have any requests yet.</p>
<% end %>
